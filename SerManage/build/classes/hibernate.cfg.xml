<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">



<hibernate-configuration>
<session-factory>

	<!-- 数据库信息（连接信息写到spring的配置文件中） -->
	<property name="dialect">
		org.hibernate.dialect.MySQL5InnoDBDialect 
	</property>

	<!-- 其他配置 -->
	<property name="show_sql">true</property>
	<property name="hbm2ddl.auto">update</property>

	<!-- 导入映射配置 -->
	<mapping 
	    resource="com/gome/sermanage/entity/SerManage_User.hbm.xml" />
	<mapping
		resource="com/gome/sermanage/entity/SerManage_Role.hbm.xml" />
	<mapping
		resource="com/gome/sermanage/entity/SerManage_Privilege.hbm.xml" />
	<mapping
		resource="com/gome/sermanage/entity/SerManage_User_Role.hbm.xml" />
	<mapping
		resource="com/gome/sermanage/entity/SerManage_Role_Privilege.hbm.xml" />
	<mapping
		resource="com/gome/sermanage/entity/SerManage_Server.hbm.xml" />
</session-factory>
</hibernate-configuration>